<odoo>
	<data>

		<record model="ir.ui.view" id="odoogame.constructed_defense_type_list">
			<field name="name">Tipos de Defensa</field>
			<field name="model">odoogame.defense_type</field>
			<field name="arch" type="xml">
				<tree>

					<field name="name"/>

					<field name="ataque"/>
					<field name="defensa"/>


					<field name="coste_hierro"/>
					<field name="coste_cobre"/>
					<field name="coste_plata"/>
					<field name="coste_oro"/>

				</tree>
			</field>
		</record>


		<record model="ir.ui.view" id="odoogame.building_type_form">
			<field name="name">building_type form</field>
			<field name="model">odoogame.defense_type</field>
			<field name="arch" type="xml">
				<form string="Course Form">
					<sheet>
						<group string="Información básica">
							<group>
								<field name="name"/>

								<field name="ataque"/>
								<field name="defensa"/>
								<field name="tiempo_construccion"/>
							</group>
							<group>
								<field name="icon" widget="image" class="oe_avatar"/>


							</group>


						</group>



						<group string="Coste recursos">


							<group>
								<field name="coste_hierro"/>
								<field name="coste_cobre"/>


							</group>
							<group>

								<field name="coste_plata"/>
								<field name="coste_oro"/>

							</group>

						</group>
					</sheet>
				</form>


			</field>
		</record>


	</data>

</odoo>