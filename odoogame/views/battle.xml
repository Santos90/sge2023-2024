<odoo>
    <data>



        <record model="ir.ui.view" id="odoogame.battle_calendar">
            <field name="name">Calendario Batallas</field>
            <field name="model">odoogame.mission</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar"
                          date_start="salida"
                          date_delay="llegada"
                          color="type">
                    <field name="origen"/>
                    <field name="destino"/>
                </calendar>
            </field>
        </record>


        <record model="ir.ui.view" id="odoogame.battle_list">
            <field name="name">Mission list</field>
            <field name="model">odoogame.mission</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="origen"/>
                    <field name="destino"/>
                    <field name="salida"/>
                    <field name="llegada"/>
                    <field name="retorno"/>
                    <field name="type"/>

                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="odoogame.battle_form">
            <field name="name">Mission form</field>
            <field name="model">odoogame.mission</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group string="Información básica">
                            <group>
                                <field name="origen"/>
                                <field name="destino"/>
                                <field name="type"/>

                            </group>
                            <group>
                                <field name="salida"/>
                                <field name="llegada"/>
                                <field name="retorno"/>
                            </group>


                        </group>


                        <notebook>
                            <page string="FLota de ataque">
                                <field name="flota"/>
                            </page>

                        </notebook>
                    </sheet>
                </form>


            </field>
        </record>



    </data>
</odoo>