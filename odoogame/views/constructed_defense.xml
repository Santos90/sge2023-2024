<odoo>
	<data>

		<record model="ir.ui.view" id="odoogame.constructed_defense_list">
			<field name="model">odoogame.constructed_defense</field>
			<field name="arch" type="xml">
				<tree>

					<field name="name"/>
					<field name="cantidad"/>
					<field name="type"/>
					<field name="planeta"/>
					<field name="jugador"/>

				</tree>
			</field>
		</record>


		<record model="ir.ui.view" id="odoogame.constructed_defense_form">

			<field name="model">odoogame.constructed_defense</field>
			<field name="arch" type="xml">
				<form string="Course Form">
					<sheet>

						<group string="Información básica">
							<group>
								<field name="type"/>

								<field name="planeta"/>
								<field name="cantidad"/>

							</group>
							<group>
								<field name="icon" widget="image" class="oe_avatar"/>

							</group>
						</group>

					</sheet>

				</form>
			</field>
		</record>


		<record model="ir.ui.view" id="odoogame.constructed_defense_search">
			<field name="name">Filtos predefinidos: Modelo constructed_defense</field>
			<field name="model">odoogame.constructed_defense</field>
			<field name="arch" type="xml">
				<search>
					<!--
					<group string="Group By">
						<filter name="group_by_player" string="Jugador" context="{'group_by': 'jugador'}"/>
					</group>
					-->
					<group string="Group By">
						<filter name="group_by_planet" string="Planeta" context="{'group_by': 'planeta'}"/>
					</group>

					<field name="type"/>
					<field name="planeta"/>
					<field name="jugador"/>


				</search>
			</field>
		</record>

        <record id="odoogame.launch_defense_wizard" model="ir.actions.act_window">
            <field name="name">Launch building</field>
            <field name="res_model">odoogame.constructed_defense_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_odoogame_constructed_building"/>
        </record>




	</data>
</odoo>