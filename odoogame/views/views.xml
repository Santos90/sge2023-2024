    <menuitem name="Gestión" id="odoogame.menu_gestion" parent="odoogame.menu_root"/>
    <menuitem name="Menu 2" id="odoogame.menu_2" parent="odoogame.menu_root"/>

    <!-- actions -->
    <menuitem name="Servers" id="odoogame.menu_gestion_server" parent="odoogame.menu_gestion"
